  agent any
  stages {
    stage('Build') {
      steps {
          sh """
          		echo 'Hello there'
						"""
        }
    }
    stage('Create Job') {
      steps {
        jobDsl scriptText:
        """ 
        pipelineJob("$POC_NAME") {
            definition {
                cpsScm {
                scm {
                    git {
                    remote {
                        url('https://github.com/yuvalo/spring-petclinic')
                    }
                    branch('*/master')
                    }
                }
                lightweight()
                }
            }
        }
        """
      }
    }
  }
} 
